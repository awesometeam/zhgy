<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.tornado.entity">
	<class
		name="Picture"
		table="PICTURE"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.Long"
			column="PICTURE_ID"
		>
			<generator class="increment"/>
		</id>

		<property
			name="PicturePath"
			column="PICTURE_PATH"
			type="string"
			not-null="true"
			length="300"
		/>
		<property
			name="PictureDescription"
			column="PICTURE_DESCRIPTION"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="CorrelationId"
			column="CORRELATION_ID"
			type="java.lang.Long"
			not-null="false"
			length="19"
		/>
		<property
			name="IsPrimary"
			column="IS_PRIMARY"
			type="java.lang.Short"
			not-null="false"
			length="4"
		/>


	</class>	
</hibernate-mapping>