<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.tornado.entity">
	<class
		name="Information"
		table="INFORMATION"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.Long"
			column="INFO_ID"
		>
			<generator class="increment"/>
		</id>

		<property
			name="Title"
			column="TITLE"
			type="string"
			not-null="true"
			length="100"
		/>
		<property
			name="Author"
			column="AUTHOR"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="Content"
			column="CONTENT"
			type="string"
			not-null="false"
		/>
		<property
			name="Date"
			column="DATE"
			type="date"
			not-null="false"
			length="10"
		/>


	</class>	
</hibernate-mapping>